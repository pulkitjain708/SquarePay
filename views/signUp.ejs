<div class="row">
        <div class="col s12 m12">
          <div class="card white darken-1">
            <div class="card-content black-text">
              <span class="card-title">Sign Up</span>
              <div class="row">
                    <form class="col s12">
                      <div class="row">
                        <div class="input-field col s12">
                                <i class="material-icons right">account_box</i>
                          <input  id="username" type="text" class="validate">
                          <label for="username">Username</label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                                <i class="material-icons right">lock</i>
                          <input id="password" type="password" class="validate">
                          <label for="password">Password</label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                                <i class="material-icons right">mail</i>
                          <input id="email" type="email" class="validate">
                          <label for="email">Email</label>
                        </div>
                      </div>
                      <div class="row">
                            <div class="input-field col s12">
                                    <i class="material-icons right">phone</i>
                              <input  id="phone" type="text" class="validate">
                              <label for="phone">Phone</label>
                            </div>
                          </div>
                          <p>
                                <label>
                                  <input name="group1" value="male" type="radio" checked />
                                  <span>Male</span>
                                </label>
                              </p>
                              <p>
                                <label>
                                  <input name="group1" value="female" type="radio" />
                                  <span>Female</span>
                                </label>
                              </p>
                    </form>
                  </div>
            <div class="card-action">
                          <form action="#">
                              <div class="file-field input-field">
                                <div class="btn">
                                  <span>Choose Profile Picture</span>
                                  <input type="file" disabled=true>
                                </div>
                                <div class="file-path-wrapper">
                                  <input class="file-path validate" type="text">
                                </div>
                              </div>
                            </form>
                            <button class="btn waves-effect waves-light" id="submit" type="submit" name="action">Submit
                                <i class="material-icons right">fingerprint</i>
                              </button>
            </div>
          </div>
        </div>
      </div>
</div>

<script>
  $("#submit").click(()=>{
    $.post("/addUser",{
      username:$("#username").val(),
      password:$("#password").val(),
      email:$("#email").val(),
      phone:$("#phone").val(),
      gender:$("input[name='group1']:checked").val()
    },(data)=>{
    if(Array.isArray(data)){
       notie.alert({position:'bottom',type:'error',time:6,text:[...data]})
     }
     else if(data=="error"){
      notie.alert({position:'bottom',type:'error',time:2,text:"Email is taken"})
     }
     else if(data=="success"){
      notie.alert({position:'bottom',type:'success',time:2,text:"Account saved"})
     }
    })
  })
</script>